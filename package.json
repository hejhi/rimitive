{
  "name": "lattice",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "workspaces": [
    "packages/*",
    "packages/examples/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "dev": "lerna run dev --parallel",
    "dev:no-build": "lerna run dev --parallel",
    "build:lattice": "pnpm --filter @lattice/signals build && pnpm --filter @lattice/lattice build",
    "clean": "lerna run clean",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "typecheck": "lerna run typecheck",
    "check": "lerna run check",
    "check:all": "lerna run check",
    "test": "lerna run test",
    "bench": "pnpm --filter @lattice/benchmarks bench",
    "bench:ci": "pnpm --filter @lattice/benchmarks bench:ci",
    "bench:compare": "pnpm --filter @lattice/benchmarks bench:compare",
    "example:devtools": "pnpm --filter @lattice/example-devtools dev",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@eslint/js": "^9.25.0",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "eslint": "^9.25.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-storybook": "^0.12.0",
    "lerna": "^8.2.2",
    "prettier": "^3.5.3",
    "terser": "^5.36.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "vitest": "^3.1.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "zustand": "^5.0.3"
  }
}
