{
  "name": "lattice",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "workspaces": [
    "packages/*",
    "packages/examples/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "dev": "lerna run dev --parallel",
    "clean": "lerna run clean  --parallel",
    "lint": "lerna run lint",
    "typecheck": "lerna run typecheck",
    "check": "lerna run check",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "test": "lerna run test",
    "api-extract": "lerna run api-extract",
    "api-collect": "mkdir -p temp && cp packages/*/temp/*.api.json temp/",
    "api-document": "pnpm api-collect && api-documenter markdown -i temp -o packages/docs/src/content/docs/api && node scripts/add-api-frontmatter.mjs",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@eslint/js": "^9.25.0",
    "@microsoft/api-documenter": "^7.28.1",
    "@microsoft/api-extractor": "^7.55.1",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "eslint": "^9.25.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-storybook": "^0.12.0",
    "lerna": "^8.2.2",
    "prettier": "^3.5.3",
    "tdd-guard-vitest": "^0.1.5",
    "terser": "^5.36.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^7.1.1",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "pnpm": {
    "overrides": {
      "tinypool": "^1.0.4"
    }
  },
  "dependencies": {
    "zustand": "^5.0.3"
  }
}
