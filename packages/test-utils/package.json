{
  "name": "@lattice/test-utils",
  "version": "0.0.1",
  "description": "Test utilities for Lattice components",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "typecheck": "tsc --noEmit",
    "check": "pnpm typecheck && pnpm test"
  },
  "dependencies": {
    "@lattice/core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.17.6",
    "typescript": "^5.8.3",
    "vite": "^6.3.2",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^2.1.8"
  },
  "publishConfig": {
    "access": "public"
  }
}
