{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitReturns": true,
    "composite": true,
    "paths": {
      "@lattice/core": ["../core/src/index.ts"],
      "@lattice/core/*": ["../core/src/*"],
      "@lattice/signals": ["../signals/src/index.ts"],
      "@lattice/signals/*": ["../signals/src/*"]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "references": [
    { "path": "../core" },
    { "path": "../signals" }
  ]
}