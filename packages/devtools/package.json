{
  "name": "@lattice/devtools",
  "version": "0.0.1",
  "description": "Developer tools for debugging and profiling Lattice applications",
  "author": "Lattice Team",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "pnpm typecheck && vite build",
    "dev": "vite build --watch",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "check": "pnpm typecheck && pnpm lint"
  },
  "dependencies": {
    "@lattice/core": "workspace:*",
    "@lattice/signals": "workspace:*"
  },
  "devDependencies": {
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "vite": "^6.3.2",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.1.1"
  },
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  }
}
