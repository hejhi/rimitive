{
  "extends": "./.wxt/tsconfig.json",
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "jsx": "react-jsx",
    "types": ["chrome"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@lattice/core": ["../core/src/index.ts"],
      "@lattice/signals": ["../signals/src/index.ts"],
      "@lattice/devtools": ["../devtools/src/index.ts"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    ".output",
    ".wxt",
    "dist",
    "public",
    "demo"
  ],
  "references": [
    { "path": "../core" },
    { "path": "../signals" },
    { "path": "../devtools" }
  ]
}