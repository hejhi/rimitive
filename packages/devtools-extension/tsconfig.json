{
  "extends": "./.wxt/tsconfig.json",
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "jsx": "react-jsx",
    "types": ["chrome"],
    "baseUrl": ".",
    "skipLibCheck": true,
    "strict": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".wxt/wxt.d.ts"],
  "exclude": ["node_modules", ".output", "dist", "public", "demo"]
}
