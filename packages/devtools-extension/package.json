{
  "name": "@rimitive/devtools-extension",
  "private": true,
  "description": "Chrome DevTools extension for debugging Rimitive applications",
  "version": "0.0.5",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt prepare && wxt build",
    "build:firefox": "wxt prepare && wxt build -b firefox",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "compile": "tsc --noEmit",
    "postinstall": "wxt prepare",
    "typecheck": "wxt prepare && tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "check": "pnpm typecheck && pnpm lint"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "1.1.15",
    "@radix-ui/react-dropdown-menu": "2.1.16",
    "@radix-ui/react-select": "2.2.6",
    "@radix-ui/react-slot": "1.2.4",
    "@radix-ui/react-tabs": "1.1.13",
    "@rimitive/core": "workspace:*",
    "@rimitive/react": "workspace:*",
    "@rimitive/signals": "workspace:*",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "lucide-react": "0.560.0",
    "postcss": "8.5.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-resizable-panels": "3.0.6",
    "source-map-js": "1.2.1",
    "tailwind-merge": "3.4.0",
    "tw-animate-css": "1.4.0",
    "vaul": "1.1.2"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "4.1.18",
    "@types/chrome": "0.1.33",
    "@types/react": "19.2.8",
    "@types/react-dom": "19.2.3",
    "@vitest/ui": "4.0.15",
    "@wxt-dev/module-react": "1.1.5",
    "globals": "16.5.0",
    "tailwindcss": "4.1.18",
    "typescript": "5.9.3",
    "vite": "7.2.7",
    "vitest": "4.0.15",
    "wxt": "0.20.11"
  }
}
