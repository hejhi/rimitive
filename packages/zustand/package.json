{
  "name": "@lattice/zustand",
  "version": "0.0.1",
  "description": "Zustand state adapter for Lattice components",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "clean": "rm -rf dist"
  },
  "peerDependencies": {
    "zustand": "^4.0.0 || ^5.0.0",
    "@lattice/core": "workspace:*"
  },
  "devDependencies": {
    "@lattice/core": "workspace:*",
    "tsup": "^8.0.0",
    "typescript": "^5.8.3",
    "vitest": "^2.0.0",
    "zustand": "^5.0.3"
  },
  "publishConfig": {
    "access": "public"
  }
}