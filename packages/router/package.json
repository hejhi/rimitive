{
  "name": "@rimitive/router",
  "version": "0.2.3",
  "description": "Routing for Rimitive",
  "author": "Rimitive Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hejhi/rimitive.git",
    "directory": "packages/router"
  },
  "keywords": [
    "rimitive",
    "router",
    "routing",
    "spa",
    "navigation"
  ],
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./route": {
      "import": "./dist/route.js",
      "types": "./dist/route.d.ts"
    },
    "./link": {
      "import": "./dist/link.js",
      "types": "./dist/link.d.ts"
    },
    "./types": {
      "import": "./dist/types.js",
      "types": "./dist/types.d.ts"
    }
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "!dist/**/*.test.d.ts",
    "!dist/**/*.map",
    "!dist/**/tsconfig.tsbuildinfo",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "pnpm typecheck && vite build && tsc -b",
    "dev": "vite build --watch",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx --ignore-pattern 'src/presets/server.ts'",
    "check": "pnpm typecheck && pnpm test && pnpm lint",
    "test": "vitest run",
    "api-extract": "mkdir -p api-reports temp && api-extractor run --local --verbose"
  },
  "dependencies": {
    "@rimitive/core": "workspace:*",
    "@rimitive/signals": "workspace:*",
    "@rimitive/view": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "25.2.0",
    "esbuild": "0.27.2",
    "happy-dom": "20.4.0",
    "rimraf": "6.1.2",
    "terser": "5.46.0",
    "typescript": "5.9.3",
    "vite": "7.3.1",
    "vitest": "4.0.18"
  },
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  }
}
