{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitReturns": true,
    "lib": ["ES2022", "DOM"],
    "types": [
      "vitest/importMeta"
    ]
  },
  "include": [
    "src/**/*.ts",
    "vite.config.ts",
    "vitest.config.ts"
  ]
}
