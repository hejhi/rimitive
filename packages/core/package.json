{
  "name": "@lattice/core",
  "version": "0.0.1",
  "description": "Core framework-agnostic behavior composition layer for Lattice components",
  "author": "Lattice Team",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./testing": {
      "import": "./dist/testing.js",
      "types": "./dist/testing.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "check": "pnpm typecheck && pnpm test",
    "test": "vitest run"
  },
  "devDependencies": {
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "vite": "^6.3.2",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.1.1"
  },
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  }
}
