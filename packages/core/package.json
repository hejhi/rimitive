{
  "name": "@rimitive/core",
  "version": "0.1.1",
  "description": "Core framework-agnostic behavior composition layer for Rimitive components",
  "author": "Rimitive Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rimitive",
    "directory": "packages/core"
  },
  "keywords": [
    "rimitive",
    "composition",
    "modules",
    "dependency-injection",
    "framework"
  ],
  "type": "module",
  "import": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "default": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "pnpm typecheck && vite build && tsc -b",
    "dev": "vite build --watch",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "check": "pnpm typecheck && pnpm test && pnpm lint",
    "test": "vitest run",
    "api-extract": "mkdir -p api-reports temp && api-extractor run --local --verbose"
  },
  "devDependencies": {
    "rimraf": "6.1.2",
    "typescript": "5.9.3",
    "vite": "7.3.1",
    "vite-plugin-dts": "4.5.4",
    "vitest": "4.0.17"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  }
}
