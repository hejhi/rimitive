{
  "name": "@lattice/store",
  "version": "0.0.1",
  "description": "Core state management for Lattice - framework-agnostic with React bindings",
  "type": "module",
  "main": "./dist/vanilla.js",
  "module": "./dist/vanilla.js",
  "types": "./dist/vanilla.d.ts",
  "exports": {
    ".": {
      "import": "./dist/vanilla.js",
      "types": "./dist/vanilla.d.ts"
    },
    "./vanilla": {
      "import": "./dist/vanilla.js",
      "types": "./dist/vanilla.d.ts"
    },
    "./react": {
      "import": "./dist/react.js",
      "types": "./dist/react.d.ts"
    }
  },
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "check": "pnpm typecheck && pnpm test",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@lattice/core": "workspace:*"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "devDependencies": {
    "@testing-library/react": "^16.3.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/node": "^22.5.4",
    "@types/react": "^18.3.17",
    "happy-dom": "^17.5.6",
    "jsdom": "^26.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-test-renderer": "^18.3.1",
    "typescript": "^5.8.3",
    "vite": "^6.3.2",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^2.1.8"
  },
  "files": [
    "dist"
  ],
  "sideEffects": false
}
