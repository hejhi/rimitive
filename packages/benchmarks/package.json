{
  "name": "@lattice/benchmarks",
  "version": "0.0.1",
  "description": "Performance benchmarks for Lattice framework",
  "author": "Lattice Team",
  "license": "MIT",
  "type": "module",
  "private": true,
  "scripts": {
    "bench": "pnpm bench:raw && pnpm bench:real",
    "bench:raw": "LATTICE_DISABLE_MEMOIZATION=true NODE_OPTIONS=--max-old-space-size=4096 vitest bench --run",
    "bench:real": "NODE_OPTIONS=--max-old-space-size=4096 vitest bench --run",
    "bench:ci": "pnpm bench:ci:raw && pnpm bench:ci:real",
    "bench:ci:raw": "LATTICE_DISABLE_MEMOIZATION=true NODE_OPTIONS=--max-old-space-size=4096 vitest bench --run --outputJson bench-results-raw.json",
    "bench:ci:real": "NODE_OPTIONS=--max-old-space-size=4096 vitest bench --run --outputJson bench-results-real.json",
    "bench:compare": "node scripts/compare-benchmarks.js",
    "bench:compare:raw": "node scripts/compare-benchmarks.js bench-results-raw.json",
    "bench:compare:real": "node scripts/compare-benchmarks.js bench-results-real.json",
    "bench:report": "pnpm bench:report:raw && pnpm bench:report:real",
    "bench:report:raw": "pnpm bench:ci:raw && pnpm report:html bench-results-raw.json && pnpm report:md bench-results-raw.json",
    "bench:report:real": "pnpm bench:ci:real && pnpm report:html bench-results-real.json && pnpm report:md bench-results-real.json",
    "report:html": "node scripts/generate-html-report.js",
    "report:md": "node scripts/generate-markdown-report.js",
    "report:all": "node scripts/generate-all-reports.js",
    "typecheck": "tsc --noEmit",
    "check": "pnpm typecheck"
  },
  "devDependencies": {
    "@lattice/core": "workspace:*",
    "@lattice/adapter-zustand": "workspace:*",
    "@lattice/adapter-redux": "workspace:*",
    "@lattice/adapter-pinia": "workspace:*",
    "@lattice/store-react": "workspace:*",
    "@lattice/store-vue": "workspace:*",
    "@types/node": "^20.0.0",
    "vitest": "^3.1.1",
    "zustand": "^5.0.3",
    "@reduxjs/toolkit": "^2.8.2",
    "pinia": "^2.3.0",
    "vue": "^3.5.0",
    "react": "^18.3.1",
    "@testing-library/react": "^14.0.0",
    "@types/react": "^18.3.0",
    "jsdom": "^25.0.0"
  }
}
