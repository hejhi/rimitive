{
  "name": "@lattice/adapter-zustand",
  "version": "0.0.1",
  "description": "Zustand adapter for Lattice - integrate Lattice components with Zustand state management",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@lattice/core": "workspace:*",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@types/node": "^22.5.4",
    "typescript": "^5.8.3",
    "vite": "^6.3.2",
    "vitest": "^2.1.8"
  },
  "files": [
    "dist"
  ],
  "sideEffects": false
}
