{
  "name": "@lattice/signals",
  "version": "0.0.1",
  "description": "Reactive primitives for Lattice components",
  "author": "Lattice Team",
  "license": "MIT",
  "type": "module",
  "exports": {
    "./api": {
      "import": "./dist/api.js",
      "types": "./dist/api.d.ts"
    },
    "./signal": {
      "import": "./dist/signal.js",
      "types": "./dist/signal.d.ts"
    },
    "./computed": {
      "import": "./dist/computed.js",
      "types": "./dist/computed.d.ts"
    },
    "./effect": {
      "import": "./dist/effect.js",
      "types": "./dist/effect.d.ts"
    },
    "./batch": {
      "import": "./dist/batch.js",
      "types": "./dist/batch.d.ts"
    },
    "./subscribe": {
      "import": "./dist/subscribe.js",
      "types": "./dist/subscribe.d.ts"
    },
    
    "./types": {
      "import": "./dist/types.js",
      "types": "./dist/types.d.ts"
    },
    "./context": {
      "import": "./dist/context.js",
      "types": "./dist/context.d.ts"
    },
    "./constants": {
      "import": "./dist/constants.js",
      "types": "./dist/constants.d.ts"
    },
    "./default-context": {
      "import": "./dist/default-context.js",
      "types": "./dist/default-context.d.ts"
    },
    "./helpers/graph-walker": {
      "import": "./dist/helpers/graph-walker.js",
      "types": "./dist/helpers/graph-walker.d.ts"
    },
    "./helpers/work-queue": {
      "import": "./dist/helpers/work-queue.js",
      "types": "./dist/helpers/work-queue.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "pnpm typecheck && vite build",
    "dev": "vite build --watch",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "check": "pnpm typecheck && pnpm test && pnpm lint",
    "test": "vitest run"
  },
  "dependencies": {
    "@lattice/lattice": "workspace:*"
  },
  "devDependencies": {
    "alien-signals": "^2.0.5",
    "esbuild": "^0.25.8",
    "rimraf": "^6.0.1",
    "terser": "^5.36.0",
    "typescript": "^5.8.3",
    "vite": "^6.3.2",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.1.1"
  },
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  }
}
