{
  "name": "@lattice/signals",
  "version": "0.0.1",
  "description": "Reactive primitives for Lattice components",
  "author": "Lattice Team",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./signal": {
      "import": "./dist/signal.js",
      "types": "./dist/signal.d.ts"
    },
    "./computed": {
      "import": "./dist/computed.js",
      "types": "./dist/computed.d.ts"
    },
    "./effect": {
      "import": "./dist/effect.js",
      "types": "./dist/effect.d.ts"
    },
    "./batch": {
      "import": "./dist/batch.js",
      "types": "./dist/batch.d.ts"
    },
    "./subscribe": {
      "import": "./dist/subscribe.js",
      "types": "./dist/subscribe.d.ts"
    },
    "./type-guards": {
      "import": "./dist/type-guards.js",
      "types": "./dist/type-guards.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "pnpm typecheck && vite build",
    "dev": "vite build --watch",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "check": "pnpm typecheck && pnpm test && pnpm lint",
    "test": "vitest run"
  },
  "dependencies": {
    "@lattice/lattice": "workspace:*"
  },
  "devDependencies": {
    "rimraf": "^6.0.1",
    "terser": "^5.36.0",
    "typescript": "^5.8.3",
    "vite": "^6.3.2",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.1.1"
  },
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  }
}