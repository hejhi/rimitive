{
  "name": "@lattice/example-ssr",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build:server": "tsc --project tsconfig.server.json",
    "build:client": "vite build",
    "build": "pnpm build:server && pnpm build:client",
    "start": "node dist/server/server.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@lattice/islands": "workspace:*",
    "@lattice/lattice": "workspace:*",
    "@lattice/signals": "workspace:*",
    "@lattice/view": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "tsx": "^4.19.2",
    "typescript": "^5.8.3",
    "vite": "^6.4.1"
  }
}
