{
  "name": "@lattice/frameworks",
  "version": "0.0.1",
  "description": "Framework integrations for Lattice - React hooks, Vue composables, and Svelte stores",
  "author": "Lattice Team",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./react": {
      "import": "./dist/react.js",
      "types": "./dist/react.d.ts"
    },
    "./vue": {
      "import": "./dist/vue.js",
      "types": "./dist/vue.d.ts"
    },
    "./solid": {
      "import": "./dist/solid.js",
      "types": "./dist/solid.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "check": "pnpm typecheck && pnpm test",
    "test": "vitest run"
  },
  "dependencies": {
    "@lattice/core": "workspace:*"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "solid-js": "^1.8.0",
    "vue": "^3.3.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "solid-js": {
      "optional": true
    },
    "vue": {
      "optional": true
    }
  },
  "devDependencies": {
    "@testing-library/react": "^16.3.0",
    "@types/react": "^18.0.0",
    "@vue/test-utils": "^2.4.0",
    "jsdom": "^26.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rimraf": "^6.0.1",
    "solid-js": "^1.8.0",
    "typescript": "^5.8.3",
    "vite": "^6.3.2",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-solid": "^2.11.7",
    "vitest": "^3.1.1",
    "vue": "^3.4.0"
  },
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  }
}
