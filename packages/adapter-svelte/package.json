{
  "name": "@lattice/adapter-svelte",
  "version": "0.0.1",
  "description": "Svelte stores adapter for Lattice - integrate Lattice components with Svelte's built-in state management",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "check": "pnpm typecheck && pnpm test",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@lattice/core": "workspace:*",
    "@lattice/runtime": "workspace:*",
    "svelte": "^4.0.0 || ^5.0.0"
  },
  "peerDependencies": {
    "svelte": "^4.0.0 || ^5.0.0"
  },
  "devDependencies": {
    "@testing-library/svelte": "^5.0.0",
    "@types/node": "^22.5.4",
    "happy-dom": "^17.5.6",
    "jsdom": "^26.1.0",
    "svelte": "^5.0.0",
    "typescript": "^5.8.3",
    "vite": "^6.3.2",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^2.1.8"
  },
  "files": [
    "dist"
  ],
  "sideEffects": false
}
