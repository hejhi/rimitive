{
  "name": "@lattice/resource",
  "version": "0.0.1",
  "description": "Async data fetching with reactive dependency tracking for Lattice",
  "author": "Lattice Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hejhi/lattice",
    "directory": "packages/resource"
  },
  "keywords": [
    "lattice",
    "resource",
    "async",
    "data-fetching",
    "reactive"
  ],
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./extend": {
      "import": "./dist/extend.js",
      "types": "./dist/extend.d.ts"
    },
    "./types": {
      "import": "./dist/types.js",
      "types": "./dist/types.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "pnpm typecheck && vite build && tsc -b",
    "dev": "vite build --watch",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "check": "pnpm typecheck && pnpm test && pnpm lint",
    "test": "vitest run"
  },
  "dependencies": {
    "@lattice/lattice": "workspace:*",
    "@lattice/signals": "workspace:*",
    "@lattice/view": "workspace:*"
  },
  "devDependencies": {
    "esbuild": "0.27.1",
    "rimraf": "6.1.2",
    "terser": "5.44.1",
    "typescript": "5.9.3",
    "vite": "7.2.7",
    "vite-plugin-dts": "4.5.4",
    "vitest": "4.0.15"
  },
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  }
}
