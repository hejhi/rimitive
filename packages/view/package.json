      "types": "./dist/helpers/index.d.ts"
    },
    "./map": {
      "import": "./dist/map.js",
      "types": "./dist/map.d.ts"
    },
    "./on": {
      "import": "./dist/on.js",
      "types": "./dist/on.d.ts"
    },
    "./presets/core": {
      "import": "./dist/presets/core.js",
