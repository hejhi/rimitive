    },
    "./match": {
      "import": "./dist/match.js",
      "types": "./dist/match.d.ts"
    },
    "./component": {
      "import": "./dist/component.js",
      "types": "./dist/component.d.ts"
    },
    "./create": {
      "import": "./dist/create.js",
      "types": "./dist/create.d.ts"
    },
    "./types": {
      "import": "./dist/types.js",
      "types": "./dist/types.d.ts"
    },
    "./helpers/scope": {
      "import": "./dist/helpers/scope.js",
      "types": "./dist/helpers/scope.d.ts"
