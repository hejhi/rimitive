{
  "name": "@lattice/view",
  "version": "0.0.1",
  "description": "Reactive DOM primitives for Lattice",
  "author": "Lattice Team",
  "license": "MIT",
  "type": "module",
  "exports": {
    "./el": {
      "import": "./dist/el.js",
      "types": "./dist/el.d.ts"
    },
    "./elMap": {
      "import": "./dist/elMap.js",
      "types": "./dist/elMap.d.ts"
    },
    "./context": {
      "import": "./dist/context.js",
      "types": "./dist/context.d.ts"
    },
    "./types": {
      "import": "./dist/types.js",
      "types": "./dist/types.d.ts"
    },
    "./helpers/scope": {
      "import": "./dist/helpers/scope.js",
      "types": "./dist/helpers/scope.d.ts"
    },
    "./helpers/reconcile": {
      "import": "./dist/helpers/reconcile.js",
      "types": "./dist/helpers/reconcile.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "pnpm typecheck && vite build",
    "dev": "vite build --watch",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "check": "pnpm typecheck && pnpm test && pnpm lint",
    "test": "vitest run"
  },
  "dependencies": {
    "@lattice/lattice": "workspace:*",
    "@lattice/signals": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "esbuild": "^0.25.8",
    "happy-dom": "^15.11.7",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "vite": "^7.1.1",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  },
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  }
}
