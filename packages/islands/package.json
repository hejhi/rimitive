{
  "name": "@lattice/islands",
  "version": "0.0.1",
  "description": "Islands architecture for server-side rendering with Lattice",
  "author": "Lattice Team",
  "license": "MIT",
  "type": "module",
  "exports": {
    "./ssr-context": {
      "import": "./dist/ssr-context.js",
      "types": "./dist/ssr-context.d.ts"
    },
    "./island": {
      "browser": {
        "import": "./dist/island.browser.js",
        "types": "./dist/island.browser.d.ts"
      },
      "import": "./dist/island.js",
      "types": "./dist/island.d.ts"
    },
    "./hydrators/dom": {
      "import": "./dist/hydrators/dom.js",
      "types": "./dist/hydrators/dom.d.ts"
    },
    "./helpers/renderToString": {
      "import": "./dist/helpers/renderToString.js",
      "types": "./dist/helpers/renderToString.d.ts"
    },
    "./renderers/dom-server": {
      "import": "./dist/renderers/dom-server.js",
      "types": "./dist/renderers/dom-server.d.ts"
    },
    "./renderers/dom-hydration": {
      "import": "./dist/renderers/dom-hydration.js",
      "types": "./dist/renderers/dom-hydration.d.ts"
    },
    "./renderers/islands": {
      "import": "./dist/renderers/islands.js",
      "types": "./dist/renderers/islands.d.ts"
    },
    "./presets/island-ssr": {
      "import": "./dist/presets/island-ssr.js",
      "types": "./dist/presets/island-ssr.d.ts"
    },
    "./types": {
      "import": "./dist/types.js",
      "types": "./dist/types.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "pnpm typecheck && vite build && tsc -b",
    "dev": "vite build --watch",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "check": "pnpm typecheck && pnpm test && pnpm lint",
    "test": "vitest run"
  },
  "dependencies": {
    "@lattice/lattice": "workspace:*",
    "@lattice/signals": "workspace:*",
    "@lattice/view": "workspace:*",
    "linkedom": "^0.18.12"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "esbuild": "^0.25.8",
    "rimraf": "^6.0.1",
    "terser": "^5.36.0",
    "typescript": "^5.8.3",
    "vite": "^7.1.1",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  },
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  }
}
