{
  "name": "@lattice/islands",
  "version": "0.0.1",
  "description": "Islands architecture for server-side rendering with Lattice",
  "author": "Lattice Team",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "browser": {
        "import": "./dist/index.browser.js",
        "types": "./dist/index.browser.d.ts"
      },
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./server": {
      "import": "./dist/server/index.js",
      "types": "./dist/server/index.d.ts"
    },
    "./client": {
      "import": "./dist/client/index.js",
      "types": "./dist/client/index.d.ts"
    },
    "./island": {
      "browser": {
        "import": "./dist/island.browser.js",
        "types": "./dist/island.browser.d.ts"
      },
      "import": "./dist/island.js",
      "types": "./dist/island.d.ts"
    },
    "./adapters/dom-server": {
      "import": "./dist/adapters/dom-server.js",
      "types": "./dist/adapters/dom-server.d.ts"
    },
    "./ssr-context": {
      "import": "./dist/ssr-context.js",
      "types": "./dist/ssr-context.d.ts"
    },
    "./deps/renderToString": {
      "import": "./dist/deps/renderToString.js",
      "types": "./dist/deps/renderToString.d.ts"
    },
    "./hydrators/dom": {
      "import": "./dist/hydrators/dom.js",
      "types": "./dist/hydrators/dom.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "pnpm typecheck && vite build && tsc -b",
    "dev": "vite build --watch",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "check": "pnpm typecheck && pnpm test && pnpm lint",
    "test": "vitest run",
    "api-extract": "mkdir -p api-reports temp && api-extractor run --local --verbose"
  },
  "dependencies": {
    "@lattice/lattice": "workspace:*",
    "@lattice/signals": "workspace:*",
    "@lattice/view": "workspace:*",
    "linkedom": "^0.18.12"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "esbuild": "^0.25.8",
    "rimraf": "^6.0.1",
    "terser": "^5.36.0",
    "typescript": "^5.8.3",
    "vite": "^7.1.1",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  },
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  }
}
