{
  "name": "@lattice/adapter-pinia",
  "version": "0.0.1",
  "description": "Pinia adapter for Lattice - integrate Lattice components with Vue's official state management library",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@lattice/core": "workspace:*",
    "@lattice/runtime": "workspace:*"
  },
  "peerDependencies": {
    "pinia": "^2.1.0",
    "vue": "^3.3.0"
  },
  "devDependencies": {
    "@lattice/test-utils": "workspace:*",
    "@testing-library/vue": "^8.0.0",
    "@types/node": "^20.14.10",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vue/test-utils": "^2.4.0",
    "jsdom": "^24.0.0",
    "pinia": "^2.1.7",
    "typescript": "^5.6.3",
    "vite": "^5.3.3",
    "vitest": "^2.1.6",
    "vue": "^3.4.0"
  },
  "keywords": [
    "lattice",
    "pinia",
    "vue",
    "vue3",
    "state-management",
    "store"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hivvy/lattice.git",
    "directory": "packages/adapter-pinia"
  }
}