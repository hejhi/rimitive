{
  "name": "@lattice/react",
  "version": "0.0.1",
  "description": "React bindings for Lattice signals and stores",
  "author": "Lattice Team",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./signals": {
      "import": "./dist/signals/index.js",
      "types": "./dist/signals/index.d.ts"
    },
    "./lattice": {
      "import": "./dist/lattice/index.js",
      "types": "./dist/lattice/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "pnpm typecheck && vite build",
    "dev": "vite build --watch",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "check": "pnpm typecheck && pnpm test && pnpm lint",
    "test": "vitest run"
  },
  "dependencies": {
    "@lattice/lattice": "workspace:*",
    "@lattice/signals": "workspace:*"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": false
    }
  },
  "devDependencies": {
    "@types/react": "^19.2.2",
    "@testing-library/react": "^16.1.1",
    "@testing-library/jest-dom": "^6.6.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "vite": "^7.1.1",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.6",
    "jsdom": "^27.1.0",
    "@vitest/browser": "^4.0.6",
    "eslint-plugin-react-hooks": "^7.0.1"
  },
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  }
}
