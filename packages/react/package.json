{
  "name": "@rimitive/react",
  "version": "0.1.1",
  "description": "React bindings for Rimitive signals and stores",
  "author": "Rimitive Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rimitive",
    "directory": "packages/react"
  },
  "keywords": [
    "rimitive",
    "react",
    "signals",
    "hooks",
    "state-management"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./signals": {
      "import": "./dist/signals/index.js",
      "types": "./dist/signals/index.d.ts"
    },
    "./core": {
      "import": "./dist/core/index.js",
      "types": "./dist/core/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "pnpm typecheck && vite build && tsc -b",
    "dev": "vite build --watch",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "check": "pnpm typecheck && pnpm test && pnpm lint",
    "test": "vitest run",
    "api-extract": "mkdir -p api-reports temp && api-extractor run --local --verbose"
  },
  "dependencies": {
    "@rimitive/core": "workspace:*",
    "@rimitive/signals": "workspace:*"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": false
    }
  },
  "devDependencies": {
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "16.3.1",
    "@types/react": "19.2.8",
    "@vitest/browser": "4.0.17",
    "eslint-plugin-react-hooks": "7.0.1",
    "jsdom": "27.4.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "rimraf": "6.1.2",
    "typescript": "5.9.3",
    "vite": "7.3.1",
    "vite-plugin-dts": "4.5.4",
    "vitest": "4.0.17"
  },
  "sideEffects": false,
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "public"
  }
}
