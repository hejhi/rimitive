{
  "name": "@lattice/react",
  "version": "0.0.1",
  "description": "React bindings for Lattice signals and stores",
  "author": "Lattice Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hejhi/lattice",
    "directory": "packages/react"
  },
  "keywords": [
    "lattice",
    "react",
    "signals",
    "hooks",
    "state-management"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./signals": {
      "import": "./dist/signals/index.js",
      "types": "./dist/signals/index.d.ts"
    },
    "./lattice": {
      "import": "./dist/lattice/index.js",
      "types": "./dist/lattice/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "pnpm typecheck && vite build && tsc -b",
    "dev": "vite build --watch",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "check": "pnpm typecheck && pnpm test && pnpm lint",
    "test": "vitest run",
    "api-extract": "mkdir -p api-reports temp && api-extractor run --local --verbose"
  },
  "dependencies": {
    "@lattice/lattice": "workspace:*",
    "@lattice/signals": "workspace:*"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": false
    }
  },
  "devDependencies": {
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "16.3.0",
    "@types/react": "19.2.7",
    "@vitest/browser": "4.0.15",
    "eslint-plugin-react-hooks": "7.0.1",
    "jsdom": "27.3.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "rimraf": "6.1.2",
    "typescript": "5.9.3",
    "vite": "7.2.7",
    "vite-plugin-dts": "4.5.4",
    "vitest": "4.0.15"
  },
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  }
}
